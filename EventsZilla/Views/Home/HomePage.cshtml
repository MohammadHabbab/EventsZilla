@using EventsZilla.Core
@model EventsZilla.ViewModels.HomepageViewModel
@{
    ViewBag.Title = "HomePage";
}

@Model.Content

  <div class="holder_content1">
    <section class="group4">
   <h3>Next event</h3>
@if (Model.NextEvent != null)
{
    <a href="@Url.Action("Index", "Event", new { id = Model.NextEvent.Id, slug = Model.NextEvent.Slug })"><h4>@Model.NextEvent.Title</h4></a>
    <p>@Html.Html5EventDateTimeTag(Model.NextEvent.StartsAt, Model.NextEvent.EndsAt)</p>
    <h4>@Model.NextEvent.Title</h4>
